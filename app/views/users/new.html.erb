<% provide :title, t("sign_up") %>
<h1><%= t("sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= f.label :name, t("name_signup") %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password, t("password_signup") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirm, t("confirmation") %>
      <%= f.password_field :password_confirm %>
      <%= f.submit t("create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>