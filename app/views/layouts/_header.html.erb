<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), static_pages_home_path, id: "logo" %>
    <%= link_to t("english"), locale: :en %>
    <%= link_to t("vietnamese"), locale: :vi %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), static_pages_home_path %></li>
        <li><%= link_to t("help"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.session.user"), user_path(@current_user)%></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t "users.session.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "users.session.profile", current_user %></li>
              <li><%= link_to "users.session.settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to "users.session.logout", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
        <li><%= link_to t("contact"), static_pages_contact_path %></li>
      </ul>
    </nav>
  </div>
</header>
