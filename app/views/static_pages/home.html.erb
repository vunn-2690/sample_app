<div class="center jumbotron">
  <h1><%= t "welcome" %></h1>
  <h2>
    <%= t "intro_home" %>
    <%= link_to t("rails_tutorial"), "https://www.railstutorial.org/" %>
    <%= t "app_name" %>
  </h2>
  <%= link_to t("sign_up"), '#', class: "btn btn-lg btn-primary" %>
</div>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "user.micropost.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>
